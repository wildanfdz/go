// Fungsi untuk menampilkan menu utama
func menu() {
	for {
		fmt.Println("\nAplikasi Tri-Darma Perguruan Tinggi")
		fmt.Println("1. Tambah Data Kegiatan")
		fmt.Println("2. Tampilkan Semua Kegiatan")
		fmt.Println("3. Hapus Data Kegiatan")
		fmt.Println("4. Urutkan Kegiatan Berdasarkan Tahun Ascending")
		fmt.Println("5. Urutkan Kegiatan Berdasarkan Tahun Descending")
		fmt.Println("6. Keluar")

		var pilihan int
		fmt.Print("Pilih menu: ")
		fmt.Scanln(&pilihan)

		switch pilihan {
		case 1:
			tambahKegiatan()
		case 2:
			tampilkanSemuaKegiatan()
		case 3:
			var id int
			fmt.Print("Masukkan ID kegiatan yang akan dihapus: ")
			fmt.Scanln(&id)
			hapusKegiatan()
		case 4:
			selectionSortTahunAscending()
		case 5:
			selectionSortTahunDescending()
		case 6:
			fmt.Println("Keluar dari aplikasi. Terima kasih!")
			return
		default:
			fmt.Println("Pilihan tidak valid!")
		}
	}
}

func main()Â {
	menu()
}
